			public void eliminar(byte, dato1, byte dato2, string[]datos)//funcion que elimina espacios en blanco
			{
				byte ultimo=0; string cambio; byte posicion=0;
				dato1=19;
				while(dato1>=1)
				{
					ultimo=dato1;
					while (ultimo>=1)
					{
						posicion=Convert.ToByte(ultimo-1);
						if(posicion!=255) //si posicion es diferente de 255
						{
							while(((posicion!=255)&&(posicion>=0)&&(datos[posicion]=="")))
							{
								cambio=datos[ultimo];//datos igual ultimo registro
								datos[posicion]=cambio;
								datos[ultimo]="";
								posicion--; // la posicion decrementa
								
							}
						}
						ultimo--;
						
					}
					dato1--;
